						</div>
					</section>

				</section>

				<section id="bottom">
					<h1>Past Races</h1>
					<div id="all results">
						<!-- needs javascript to add new section for each new race result -->
						<table id="allResultsTable">
						<!-- 
							<thead>
								<tr>
									<th>Track</th>
									<th>Weather</th>
									<th>Winner</th>
								</tr>
							</thead>
